#define _CRT_SECURE_NO_WARNINGS 1
//计算1/1-1/2+1/3-1/4+1/5······+1/99-1/100的值，打印出结果
方法一：简便但逻辑不好
#include<stdio.h>
int main()
{
	int a = 1;
	int b = 2;
	float z=0;
	for (int i = 1; i < 101; i++)
	{
		z = z + 1.0 / a - 1.0/ b;        --这里必须使用1.0将 1.0/a 和 1.0/b 的结果强制转换成float
		a = a + 2;
		b = b + 2;
		if (b == 102)
		{
			printf("%f\n", z);
                        break;     
		}
		
	}
	return 0;
}

方法二：麻烦
#include<stdio.h>
int main()
{
	int i = 0;
	float a = 0;
	int b = 0;
	float z = 0;
	for (i = 1; i < 101; i+=2)
	{
		a = a+1.0 / i;                             

	}
	for (b = 2; b< 101; b+=2)
	{
		z=z-1.0 / b;

	}
	float sum = a + z;
	printf("%f\n", sum);
	

	return 0;
}

方法三：逻辑可以
#include<stdio.h>
int main()
{
	int i = 0;
	float a = 0;

	for (i = 1; i < 101; i++)
	{
		if (i % 2 == 0)          
		{                       
			 i = -i;              
		}
		a = a + 1.0/i;                              --这里必须使用1.0将 1.0/a 和 1.0/b 的结果强制转换成float，不能用a = a + 1/float(i)的方式，因为前面 i%2 的前提条件是 i 必须为整形
		if (i < 0)
		{
			i = -i;
		}

	}
	
	printf("%f\n", a);


	return 0;
}
